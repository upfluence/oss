  <section class='col-xs-9 center-block inputs'>
    <div class='row'>
      <h3 class='col-xs-12'>Forms</h3>
      <div class='col-xs-6'>
        <h4>Inputs</h4>
        <div class='row'>
          <div class='col-xs-6'>
            <div class='form-group upf-input-container'>
              <label>Label</label>
              <input type='text' placeholder='Some random placeholder text'
                     class='form-control upf-input' />
            </div>
          </div>

          <div class='col-xs-6'>
            <div class='form-group upf-input-container'>
              <label>Label</label>
              <input type='text' value='This one has a value'
                     class='form-control upf-input' />
            </div>
          </div>

          <div class='col-xs-12'>
            <div class='form-group upf-input-container upf-input-container--errorful'>
              <label>Label</label>
              <input type='text' value='This one has an error'
                     class='form-control upf-input' />
              <span class='col-xs-12 upf-input-feedback upf-input-feedback--error'>
                <i class='fa fa-exclamation-circle'
                   aria-label='Hi! My name is error. But you can call me Nickelback'>
                </i>
              </span>
            </div>
          </div>

          <div class='col-xs-12'>
            <div class='form-group upf-input-container upf-input-container--has-help'>
              <label>Label</label>
              <input type='text' value='A cool input that even offers some help'
                     class='form-control upf-input' />
              <span class='col-xs-12 upf-input-feedback upf-input-feedback--help'>
                <i class='fa fa-question-circle'
                   aria-label='Confusing input huh?'>
                </i>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xs-6">
        <h4>Textarea</h4>
        <div class='row'>
          <div class='col-xs-12'>
            <div class='form-group upf-input-container'>
              <label>Label</label>
