  <section class='col-xs-9 center-block buttons'>
    <div class='row'>
      <h3 class='col-xs-12'>Buttons</h3>
      <div class='col-xs-6'>
        <h4 class='col-xs-12'>Red | Primary</h4>
        <div class='row'>
          <div class='col-xs-3'>
            <h5>Normal</h5>
            <button class='btn upf-btn'>Button</button>
