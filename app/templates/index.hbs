  <section class='col-xs-9 center-block buttons'>
    <div class='row'>
      <h2 class='col-xs-12'>Buttons</h2>
      <div class='col-xs-6'>
        <h3 class='col-xs-12'>Red | Primary</h3>
        <div class='row'>
          <div class='col-xs-3'>
            <h4>Normal</h4>
            <button class='btn upf-btn'>Button</button>
          </div>

          <div class='col-xs-3'>
